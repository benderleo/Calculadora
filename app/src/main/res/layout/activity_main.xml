<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="0dp">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/tablaCalculadora"
        android:layout_alignParentBottom="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="C"
                android:id="@+id/btnC"
                android:background="#9c999999"
                android:textSize="30dp"
                android:layout_span="2"
                android:layout_margin="1dp"
                android:onClick="clickC"
                android:layout_weight="0.5" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="Salir"
                android:background="#9c999999"
                android:textSize="30dp"
                android:id="@+id/btnSalir"
                android:layout_span="2"
                android:layout_weight="0.5"
                android:layout_margin="1dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="7"
                android:id="@+id/btn7"
                android:background="#eeeeee"
                android:textSize="30dp"
                android:layout_margin="1dp"
                android:onClick="clickNumero"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="8"
                android:id="@+id/btn8"
                android:background="#eeeeee"
                android:textSize="30dp"
                android:layout_margin="1dp"
                android:onClick="clickNumero"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="9"
                android:id="@+id/btn9"
                android:background="#eeeeee"
                android:textSize="30dp"
                android:layout_margin="1dp"
                android:onClick="clickNumero"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="/"
                android:id="@+id/btnDividir"
                android:background="#9c999999"
                android:textSize="30dp"
                android:layout_margin="1dp"
                android:onClick="clickOperador"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="4"
                android:id="@+id/btn4"
                android:background="#eeeeee"
                android:textSize="30dp"
                android:layout_margin="1dp"
                android:onClick="clickNumero"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="5"
                android:id="@+id/btn5"
                android:background="#eeeeee"
                android:textSize="30dp"
                android:layout_margin="1dp"
                android:onClick="clickNumero"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="6"
                android:id="@+id/btn6"
                android:background="#eeeeee"
                android:textSize="30dp"
                android:layout_margin="1dp"
                android:onClick="clickNumero"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="*"
                android:id="@+id/btnMultiplicar"
                android:background="#9c999999"
                android:textSize="30dp"
                android:layout_margin="1dp"
                android:onClick="clickOperador"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="1"
                android:id="@+id/btn1"
                android:background="#eeeeee"
                android:textSize="30dp"
                android:layout_margin="1dp"
                android:onClick="clickNumero"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="2"
                android:id="@+id/btn2"
                android:background="#eeeeee"
                android:textSize="30dp"
                android:layout_margin="1dp"
                android:onClick="clickNumero"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="3"
                android:id="@+id/btn3"
                android:background="#eeeeee"
                android:textSize="30dp"
                android:layout_margin="1dp"
                android:onClick="clickNumero"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="-"
                android:id="@+id/btnRestar"
                android:background="#9c999999"
                android:textSize="30dp"
                android:layout_margin="1dp"
                android:onClick="clickOperador"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="."
                android:id="@+id/btnComa"
                android:background="#9c999999"
                android:textSize="30dp"
                android:layout_margin="1dp"
                android:onClick="clickComa"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="0"
                android:id="@+id/button10"
                android:background="#eeeeee"
                android:textSize="30dp"
                android:layout_margin="1dp"
                android:onClick="clickNumero"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="="
                android:id="@+id/btnEjecutar"
                android:background="#9c999999"
                android:textSize="30dp"
                android:layout_margin="1dp"
                android:onClick="clickEjecutar"
                android:layout_weight="1" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="+"
                android:id="@+id/btnSumar"
                android:background="#9c999999"
                android:textSize="30dp"
                android:layout_margin="1dp"
                android:onClick="clickOperador"
                android:layout_weight="1" />
        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/txtResultado"
        android:layout_centerHorizontal="true"
        android:editable="false"
        android:singleLine="true"
        android:textSize="40dp"
        android:textStyle="italic"
        />

</RelativeLayout>
